@model UserProfileViewModel

<h2>Mi Perfil</h2>

@if (ViewData.ModelState.ContainsKey(""))
{
    <div class="alert alert-danger" role="alert">
        @Html.ValidationSummary(false, null, new { @class = "text-danger" })
    </div>
}

<form asp-action="Index" method="post" enctype="multipart/form-data" class="form_mod_perfil">
    <div class="form-group div_perfil">
        <div class="div_img_perfi">
            @if (Model.UserProfileImg != null)
            {
                <img src="data:image;base64,@Convert.ToBase64String(Model.UserProfileImg)" class="img_perfil" />
            }
            else
            {
                <img src="Images/perfil_df.jpg" class="img_perfil" />
            }
        </div>
    </div>
    @if (!string.IsNullOrEmpty(Model.FutureDateError))
    {
        <div style="width:80%;margin:auto;text-align:center;margin-bottom:20px;" class="alert alert-danger">@Model.FutureDateError</div>
    }
    <div class="div_form_inputs">
        <!-- Eliminamos los inputs y los reemplazamos por elementos <p> -->
        <p><strong>Nombre:</strong> @Model.UserName</p>

        <p><strong>Apellido:</strong> @Model.UserSurname</p>

        <p><strong>Fecha de Nacimiento:</strong> @Model.UserBirthDate</p>

        <p><strong>Rol:</strong> @Model.RoleDescription</p>

        <br />
        <!-- Eliminamos el botón de "Guardar Cambios" ya que no hay datos para modificar -->
    </div>
    <a asp-controller="Profile" asp-action="ModifyProfile" class="btn btn-primary" style="margin:auto;display:block;width:150px;">Modificar</a>
</form>
